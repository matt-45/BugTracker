                    <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div class="widget-user-header bg-success">
                        <h3 class="widget-user-username">@Model.User.FirstName @Model.User.LastName (@Model.User.DisplayName)</h3>
                        <h5 class="widget-user-desc">@Model.UserRoles[0]</h5>
                    </div>
                    <div class="widget-user-image">
                        <img class="img-circle elevation-2" src="file://C:/Users/mattp/Desktop/Resources/AdminLTE-3.0.0-rc.5/dist/img/user1-128x128.jpg">
                    </div>
                    <div class="card-footer">
