@model IEnumerable<BugTracker.Models.TicketHistory>


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark" style="font-weight: bold; font-size: 300%">All Ticket Histories</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Your Dashboard</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>



<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title" style="font-weight: bold">Ticket Histories</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
                <!--Drop downs for filtering-->
            </div>
            <div class="card-body">
                <table id="ticketHistoriesIndexTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>New Value</th>
                            <th>Old Value</th>
                            <th>User</th>
                            <th>Changed</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var history in Model)
                        {
                            <tr>
                                <td>@history.Property</td>
                                <td>@history.NewValue</td>
                                <td>@history.OldValue</td>
                                <td>@history.User.FullName</td>
                                <td>@history.Changed</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Property</th>
                            <th>New Value</th>
                            <th>Old Value</th>
                            <th>User</th>
                            <th>Changed</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <!-- The Modal -->

</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#ticketHistoriesIndexTable").DataTable({
                "order": [[4, "desc"]]
            });
        });
    </script>
}
