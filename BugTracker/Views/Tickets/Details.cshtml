@model BugTracker.Models.Ticket

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">(Tickets Name) Details</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Your Dashboard</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                <div>
                    <div class="accordion" id="ticketAccordion">
                        <div class="info-box mb-3 bg-green">
                            <span class="info-box-icon bg-white elevation-1"><i class="fas fa-laptop" style="color: #208637"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text" style="font-size: large; font-weight: bold">Assigned Developer:</span>
                                <span class="info-box-text">@Model.AssignedToUser.DisplayName</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <div id="headingOne" class="info-box mb-3" style="cursor: pointer" data-target="#statusCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="statusCollapse">
                            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-check"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text" style="font-size: large; font-weight: bold">Status:</span>
                                <span class="info-box-text">@Model.TicketStatus.Name</span>
                            </div>
                            <i class="fas fa-chevron-down float-right"></i>
                            <!-- /.info-box-content -->
                        </div>
                        <div id="statusCollapse" class="collapse" aria-labelledby="headingOne"
                             data-parent="#ticketAccordion">
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingOne" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-green elevation-1"><i class="fas fa-check-double"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Resolved</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingOne" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-yellow elevation-1"><i class="fas fa-check"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Assigned</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingOne" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-red elevation-1"><i class="fas fa-exclamation-triangle"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Unassigned</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingOne" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-gray elevation-1"><i class="fas fa-archive"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Archive</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div id="headingTwo" class="info-box mb-3" style="cursor: pointer" data-target="#priorityCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="priorityCollapse">
                            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-exclamation-triangle"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text" style="font-size: large; font-weight: bold">Priority:</span>
                                <span class="info-box-text">@Model.TicketPriority.Name</span>
                            </div>
                            <i class="fas fa-chevron-down float-right"></i>
                            <!-- /.info-box-content -->
                        </div>
                        <div id="priorityCollapse" class="collapse" aria-labelledby="headingTwo"
                             data-parent="#ticketAccordion">
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingTwo" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-yellow elevation-1"><i class="fas fa-angle-up"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Low</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingTwo" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-orange elevation-1"><i class="fas fa-angle-double-up"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Medium</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingTwo" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-red elevation-1"><i class="fas fa-exclamation-triangle"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">High</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div id="headingThree" class="info-box mb-3" style="cursor: pointer" data-target="#typeCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="typeCollapse">
                            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-server"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text" style="font-size: large; font-weight: bold">Type:</span>
                                <span class="info-box-text">@Model.TicketType.Name</span>
                            </div>
                            <i class="fas fa-chevron-down float-right"></i>
                            <!-- /.info-box-content -->
                        </div>
                        <div id="typeCollapse" class="collapse" aria-labelledby="headingThree"
                             data-parent="#ticketAccordion">
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingThree" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-green elevation-1"><i class="fas fa-hand-paper"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Feature Request</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingThree" class="info-box mb-3" style="cursor: pointer" data-target="#typeCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="typeCollapse">
                                        <span class="info-box-icon bg-yellow elevation-1"><i class="fas fa-mouse-pointer"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">UI</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingThree" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-orange elevation-1"><i class="fas fa-server"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Server</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                            <div style="padding-left: 20%">
                                <a href="#" style="color:black">
                                    <div id="headingThree" class="info-box mb-3" style="cursor: pointer" data-target="#roleCollapse" data-toggle="collapse" aria-expanded="true" aria-controls="roleCollapse">
                                        <span class="info-box-icon bg-red elevation-1"><i class="fas fa-exclamation-triangle"></i></span>
                                        <div class="info-box-content">
                                            <span class="info-box-text" style="font-size: large; font-weight: bold">Defect</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="info-box mb-3 bg-yellow">
                            <i class="fas fa-arrow-circle-up fa-2x" style="display: flex;justify-content: center;align-items: center;padding-left: 5%"></i>
                            <div class="info-box-content">
                                <span class="info-box-number" style="text-align: center">Upload<br />Attachments</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="info-box mb-3 bg-green">
                            <i class="fas fa-arrow-circle-down fa-2x" style="display: flex;justify-content: center;align-items: center;padding-left: 5%"></i>
                            <div class="info-box-content">
                                <span class="info-box-number" style="text-align: center">Download<br />Attachments</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </div>
                </div>
                <div>
                    <div class="info-box mb-3 bg-red">
                        <span class="info-box-icon bg-white elevation-1"><i class="fas fa-edit" style="color: #c62232"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text" style="font-size: large; font-weight: bold">Edit Ticket:</span>
                            <span class="info-box-text">Click here to edit the ticket</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card card-widget">
                    <div class="card-header">
                        <div class="user-block">
                            <img class="img-circle" src="../dist/img/user1-128x128.jpg">
                            <span class="username"><a href="#">AUTHODDISPLAYNAME</a></span>
                            <span class="description">CREATEDDATE</span>
                        </div>
                        <!-- /.user-block -->
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <p>This is the body of the ticket. This is the body of the ticket. This is the body of the ticket. This is the body of the ticket. This is the body of the ticket. </p>
                        <span class="float-right text-muted">1 comment</span>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer card-comments">
                        <div class="card-comment">
                            <!-- User image -->
                            <img class="img-circle img-sm" src="../dist/img/user3-128x128.jpg">
                            <div class="comment-text">
                                <span class="username">
                                    AUTHODDISPLAYNAME
                                    <span class="text-muted float-right">COMMENTCREATEDDATE</span>
                                </span><!-- /.username -->
                                <div>
                                    <button class="float-right btn btn-danger">Delete</button>
                                    <button class="float-right btn btn-warning">Edit</button>
                                </div>
                                This is a comment on this ticket
                            </div>

                            <!-- /.comment-text -->
                        </div>
                    </div>
                    <!-- /.card-footer -->
                    <div class="card-footer">
                        <form action="#" method="post">
                            <img class="img-fluid img-circle img-sm" src="../dist/img/user4-128x128.jpg">
                            <!-- .img-push is used to add margin to elements next to floating images -->
                            <div class="img-push">
                                <input type="text" class="form-control form-control-sm" placeholder="Press enter to post comment">
                            </div>
                        </form>
                    </div>
                    <!-- /.card-footer -->
                </div>
            </div>
        </div>
    </div>
</section>
